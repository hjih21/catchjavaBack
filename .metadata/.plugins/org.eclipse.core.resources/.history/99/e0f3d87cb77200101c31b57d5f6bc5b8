      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js">
    </script>
    <!-- jQuery (반드시 AJAX 스크립트보다 먼저!) -->
    <script
      src="https://code.jquery.com/jquery-3.6.0.min.js"
      integrity="sha256-/xUj+3OJ+Y4Ea6wYl2dEF+1eSEvHe85DLtq+m2JTIv8="
      crossorigin="anonymous">
    </script>
    <!-- 이메일 중복체크 AJAX -->
    <script type="text/javascript">
      $(function() {
        $('#dupBtn').on('click', function() {
          const email = $('#email').val().trim();
          if (!email) {
            $('#result')
              .text('이메일을 입력해주세요.')
              .css('color', 'red');
            return;
          }
          // REST 컨트롤러는 @GetMapping("/checkEmail") 이므로
          // context-path(/web)가 자동 붙습니다.
          $.ajax({
            url: `${location.pathname.startsWith('/web/') ? '/web' : ''}/checkEmail`,
            method: 'GET',
            data: { email: email },
            success: function(res) {
              if (res === 'true') {
                $('#result')
                  .text('✅ 사용 가능한 이메일입니다.')
                  .css('color', 'green');
              } else {
                $('#result')
                  .text('❌ 이미 사용 중인 이메일입니다.')
                  .css('color', 'red');
              }
            },
            error: function(xhr, status, error) {
              console.error('AJAX 요청 실패:', status, error);
              $('#result')
                .text('오류가 발생했습니다. 잠시 후 다시 시도해주세요.')
                .css('color', 'red');
            }
          });
        });
      });
    </script>
