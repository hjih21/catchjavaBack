<!-- 1) jQuery 먼저 로드 -->
<script
  src="https://code.jquery.com/jquery-3.6.0.min.js"
  crossorigin="anonymous"></script>

<!-- 2) 중복확인 함수 정의 (jQuery 로드 후!) -->
<script type="text/javascript">
  function checkEmail(){
    // 1. 입력값 확인
    const email = $('#email').val().trim();
    console.log('[checkEmail] 보내는 email ▶', email);

    // 2. AJAX 요청
    $.ajax({
      url: '/web/checkEmail',
      type: 'get',
      data: { inputEmail: email },
      success: function(res){
        console.log('[checkEmail] 응답 ▶', res);
        if(res === "true"){
          $("#result")
            .text("사용 가능한 이메일 입니다.")
            .css("color", "green");
        } else {
          $("#result")
            .text("이미 사용중인 이메일 입니다.")
            .css("color", "red");
        }
      },
      error: function(xhr, status, error){
        console.error('[checkEmail] 에러 ▶', status, error);
      }
    });
  }
</script>
