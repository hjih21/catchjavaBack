package com.smhrd.web.mapper;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Select;

import com.smhrd.web.entity.MsgMember;

@Mapper
public interface MsgMemberMapper {
	
	@Select("select * from tb_user where user_id=#{email}")
	MsgMember selectByEmail(String email);

	@Insert("INSERT INTO tb_user(user_id, user_pw, user_nick, joined_at)VALUES(#{user_id}, #{user_pw}, #{user_nick}, NOW())")
	void join(MsgMember mem);

	@Select("SELECT * FROM tb_user WHERE user_id = #{user_id} AND user_pw = #{user_pw}")
	MsgMember login(MsgMember mem);
	
	
	

	

	
}
